<div class="search_form">
  <%= search_form_for @q do |f| %>
    <%= f.search_field :word_or_source_or_who_cont, class: "word_form", placeholder: "単語や引用元で検索できます" %>
    <%= f.submit "検索", class: "btn btn-search my-2" %>
    <%= f.select( :sorts, { '並び替え': 'id desc', '投稿の新しい順': 'created_at desc', '投稿の古い順': 'created_at asc', 'いいね数の多い順': 'favorites_count desc', 'コメント数の多い順': 'comments_count desc',} , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} )%>
  <% end %>
</div>