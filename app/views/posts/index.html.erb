<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h3>言葉一覧</h3>
      <table class="table">
          <tr>
           <th class="w-50">言葉</th>
           <th>引用元</th>
           <%# <th>人名</th> %>
           <th>カテゴリー</th>
           <th></th>
          </tr>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= post.word %>
            </td>
            <td>
              <%= post.source %>
            </td>
            <%# <td>
              <%= post.who %>
            <%# </td> %>
            <td>
              <%= post.category %>
            </td>
            <td>
              <%= link_to "詳細", post_path(post) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>