<div class="container">
  <div class="row">
    <div class="col-md-10 my-5">
    
    <h3>言葉一覧</h3>
    <%# 検索フォーム %>
    <%= render 'search_form' %>
    
    <%= link_to "投稿する", new_post_path, class: "btn btn-add float-right" %>
      <%# 記事一覧 %>
      <%= render 'post' %>

      <%= paginate @posts %>
    </div>
    <div class="col-md-2 my-5 bg-light rounded">
      <%# カテゴリー一覧 %>
      <%= render 'category' %>
    </div>
  </div>
</div>