<header class="navbar navbar-expand-md">
  <ul class="navbar-nav my-2 px-2">
    <%= link_to root_path,class: "text-decoration-none" do %>
      <li class="logo"><%= image_tag 'logo.png', :size => '100x100' %></li>
    <% end %>
  </ul>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto my-3">
      <% if user_signed_in? %>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-user"></i>
          <%= link_to "マイページ", user_path(current_user.id), class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-book-open"></i>
          <%= link_to "言葉一覧", posts_path, class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-camera"></i></i>
          <%= link_to "青色写真館", "#", class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-users"></i>
          <%= link_to "ユーザー一覧", users_path, class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-sign-out-alt"></i>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-decoration-none" %>
        </li>
        <% if unchecked_notifications.any? %>
          <i class="fa fa-circle" style="color: #ff3333;"></i>
        <% end %>
        <li class="nav-item py-2 pr-2 mr-3">
          <i class="far fa-bell"></i>
          <%= link_to "通知", notifications_path, class: "text-decoration-none" %>
        </li>
      <% else %>
        <li class="nav-item p-2 mr-3">
          <i class="far fa-comment-alt"></i>
          <%= link_to "言葉一覧", posts_path, class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-camera"></i></i>
          <%= link_to "青色写真館", "#", class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-user-plus"></i>
          <%= link_to "新規会員登録", new_user_registration_path, class: "text-decoration-none" %>
        </li>
        <li class="nav-item p-2 mr-3">
          <i class="fas fa-sign-in-alt"></i>
          <%= link_to "ログイン", new_user_session_path, class: "text-decoration-none" %>
        </li>
      <% end %>
    </ul>
  </div>
  
</header>