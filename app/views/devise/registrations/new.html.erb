<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto p-5 my-5 bg-light
 rounded">
      <h2 class="text-center">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class:"mt-3 mb-0" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %>
        </div>

        <div class="field">
          <%= f.label :email, class:"mt-3 mb-0" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"mt-3 mb-0" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"mt-3 mb-0" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 mb-2" %>
        </div>

        <div class="actions my-3">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
