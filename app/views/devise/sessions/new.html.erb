<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto p-5 my-5 bg-light
 rounded">
      <h2 class="text-center">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"mt-3 mb-0" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"mt-3 mb-0" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field my-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-3">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>