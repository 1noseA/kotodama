<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= link_to post_favorites_path(post) do %>
        <%= post.favorites.count %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true do %>
      <i class="far fa-heart" aria-hidden="true"></i>
      <%= link_to post_favorites_path(post) do %>
        <%= post.favorites.count %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
    <i class="far fa-heart" aria-hidden="true"></i><%= post.favorites.count %>
<% end %>