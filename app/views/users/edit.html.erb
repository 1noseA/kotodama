<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto p-5 my-5 bg-light rounded">
      <h3 class="text-center">プロフィール設定</h3>

      <%= form_with model: @user do |f| %>
        <%= f.file_field :image, id: "user_image" %>

        <%= f.label :name %><br>
        <%= f.text_field :name %><br>

        <%= f.label :introduction %><br>
        <%= f.text_area :introduction %><br>

        <%= f.submit "更新する" %>
      <% end %>
      <% if @user.released? %>
        <%= link_to '非公開にする',user_nonrelease_path(@user), method: :patch%>
      <% else %>
        <%= link_to '公開する',user_release_path(@user), method: :patch%>
      <% end %>
    </div>
  </div>
</div>